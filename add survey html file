    <script>
        let currentSection = 0; const form = document.getElementById('surveyForm'); const sections = document.querySelectorAll('.form-section'); const prevBtn = document.getElementById('prevBtn'); const nextBtn = document.getElementById('nextBtn'); const submitBtn = document.getElementById('submitBtn'); const weightInputs = document.querySelectorAll('input[name^="w"]'); const weightSumSpan = document.getElementById('weightSum');
        function showSection(n) { sections[currentSection].classList.remove('active'); currentSection = n; sections[currentSection].classList.add('active'); prevBtn.style.display = currentSection === 0 ? 'none' : 'inline-block'; if (currentSection === sections.length - 1) { nextBtn.style.display = 'none'; submitBtn.style.display = 'inline-block'; } else { nextBtn.style.display = 'inline-block'; submitBtn.style.display = 'none'; } }
        function validateSection() { const currentSectionElement = sections[currentSection]; const requiredInputs = currentSectionElement.querySelectorAll('input[required]'); for (let input of requiredInputs) { if (!input.value) { alert('لطفاً تمام فیلدهای ضروری این بخش را تکمیل کنید.'); input.focus(); return false; } } if (currentSection === 1) { const sum = Array.from(weightInputs).reduce((acc, input) => acc + parseFloat(input.value || 0), 0); if (sum !== 100) { document.getElementById('validation-error').textContent = `خطا: مجموع امتیازات باید 100 باشد. مجموع فعلی: ${sum}`; document.getElementById('validation-error').style.display = 'block'; return false; } } return true; }
        function changeSection(direction) { if (direction === 1 && !validateSection()) { return; } document.getElementById('validation-error').style.display = 'none'; showSection(currentSection + direction); }
        weightInputs.forEach(input => { input.addEventListener('input', updateWeightSum); });
        function updateWeightSum() { const sum = Array.from(weightInputs).reduce((acc, input) => acc + parseFloat(input.value || 0), 0); weightSumSpan.textContent = sum; }
        form.addEventListener('submit', function(event) { event.preventDefault(); if (!validateSection()) return; submitBtn.disabled = true; submitBtn.textContent = 'در حال آماده‌سازی ایمیل...'; const formData = new FormData(form); const data = {}; formData.forEach((value, key) => { data[key] = value; }); let emailBody = `پاسخ جدید به پرسشنامه ارزیابی سناریوهای فتوولتائیک (با رویکرد همبست سیستمی)\n\n`; emailBody += `بخش اول: اطلاعات فردی\n`; emailBody += `حوزه تخصصی: ${data.expertise}\n`; emailBody += `سابقه کار: ${data.experience}\n\n`; emailBody += `بخش دوم: وزن‌دهی به معیارهای فنی (α_i)\n`; emailBody += `C1 (تابش): ${data.w1}, C2 (دسترسی): ${data.w2}, C3 (پیچیدگی): ${data.w3}, C4 (آب): ${data.w4}, C5 (CO2): ${data.w6}, C6 (اکوسیستم): ${data.w6}, C7 (هزینه): ${data.w7}, C8 (زمین): ${data.w8}, C9 (اجتماعی): ${data.w9}\n\n`; emailBody += `بخش سوم: ارزیابی همبست سیستمی (ارزش یکپارچگی γ_i)\n`; emailBody += `امتیاز سناریو ۱ (کانال آبیاری): ${data.cohesion_s1}\n`; emailBody += `امتیاز سناریو ۲ (کانال زهکش): ${data.cohesion_s2}\n`; emailBody += `امتیاز سناریو ۳ (باغ - اگری-ولتائیک): ${data.cohesion_s3}\n`; emailBody += `امتیاز سناریو ۴ (مزرعه زمینی): ${data.cohesion_s4}\n\n`; emailBody += `بخش چهارم: امتیازدهی به سناریوها (شایستگی فنی α_i)\n`; emailBody += `سناریوی ۱ (کانال آبیاری):\n`; emailBody += ` C1:${data.s1_c1} C2:${data.s1_c2} C3:${data.s1_c3} C4:${data.s1_c4} C5:${data.s1_c5} C6:${data.s1_c6} C7:${data.s1_c7} C8:${data.s1_c8} C9:${data.s1_c9}\n\n`; emailBody += `سناریوی ۲ (کانال زهکش):\n`; emailBody += ` C1:${data.s2_c1} C2:${data.s2_c2} C3:${data.s2_c3} C4:${data.s2_c4} C5:${data.s2_c5} C6:${data.s2_c6} C7:${data.s2_c7} C8:${data.s2_c8} C9:${data.s2_c9}\n\n`; emailBody += `سناریوی ۳ (باغ):\n`; emailBody += ` C1:${data.s3_c1} C2:${data.s3_c2} C3:${data.s3_c3} C4:${data.s3_c4} C5:${data.s3_c5} C6:${data.s3_c6} C7:${data.s3_c7} C8:${data.s3_c8} C9:${data.s3_c9}\n\n`; emailBody += `سناریوی ۴ (مزرعه):\n`; emailBody += ` C1:${data.s4_c1} C2:${data.s4_c2} C3:${data.s4